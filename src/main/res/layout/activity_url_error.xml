<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/online_error_btn_retry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loading"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dip"
            android:padding="10dip"
            android:src="@drawable/net_disconnect" />

        <TextView
            android:id="@+id/txt_error_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_error"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dip"
            android:gravity="center"
             />
        
        <Button
            android:id="@+id/btn_error_retry"
            android:layout_width="200dip"
            android:layout_height="80dip"
            android:layout_below="@+id/txt_error_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dip"
            android:gravity="center"
             />
    </RelativeLayout>

</LinearLayout>